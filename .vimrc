map i <Up>
map j <Left>
map k <Down>
noremap h i

syntax on

set number
set relativenumber
set cursorline
set cursorlineopt=number
set showmatch

filetype plugin indent on
set autoindent
set expandtab

set incsearch
set hlsearch
set ignorecase
set smartcase

set backspace=indent,eol,start
set scrolloff=8
set noswapfile
set nobackup
set clipboard=unnamed

set wildmenu
set wildmode=list:longest,full

set autoread
set encoding=utf-8

